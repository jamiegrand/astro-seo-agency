{
  "name": "astro-seo-agency",
  "version": "2.2.0",
  "description": "Complete Astro.js project management with SEO workflows, analytics integration, and structured development for Claude Code",
  "author": "Jamie Grand",
  "license": "MIT",
  "homepage": "https://github.com/jamiegrand/astro-seo-agency",
  "repository": {
    "type": "git",
    "url": "https://github.com/jamiegrand/astro-seo-agency.git"
  },
  
  "keywords": [
    "astro",
    "seo",
    "analytics",
    "google-analytics",
    "search-console",
    "content-management",
    "workflow",
    "claude-code",
    "mcp"
  ],

  "engines": {
    "astro": ">=4.0.0",
    "node": ">=18.0.0"
  },

  "install": {
    "script": "install.sh",
    "postInstall": "Run /setup in Claude Code to complete configuration"
  },

  "prompts": {
    "setup": {
      "description": "Interactive setup wizard for new or existing projects",
      "file": "prompts/setup.md",
      "triggers": ["/setup", "setup project", "configure plugin"]
    },
    "brownfield": {
      "description": "Analyze and integrate with existing Astro project",
      "file": "prompts/brownfield.md",
      "triggers": ["/brownfield", "analyze project", "existing project"]
    }
  },

  "agents": {
    "seo-analyst": {
      "description": "SEO specialist with GA/GSC data access for ranking analysis",
      "file": "agents/seo-analyst.md",
      "capabilities": ["analytics-query", "seo-audit", "impact-measurement"]
    },
    "astro-maintainer": {
      "description": "Astro.js code quality and maintenance specialist",
      "file": "agents/astro-maintainer.md",
      "capabilities": ["code-review", "bug-fix", "refactoring", "astro-mcp"]
    },
    "content-strategist": {
      "description": "Content planning based on performance data",
      "file": "agents/content-strategist.md",
      "capabilities": ["content-audit", "gap-analysis", "calendar-planning"]
    }
  },

  "commands": [
    {
      "name": "start",
      "description": "Initialize work session with data-driven priorities",
      "file": "commands/start.md",
      "category": "session"
    },
    {
      "name": "status",
      "description": "Show current project and session status",
      "file": "commands/status.md",
      "category": "session"
    },
    {
      "name": "pause",
      "description": "Save session state for later",
      "file": "commands/pause.md",
      "category": "session"
    },
    {
      "name": "resume",
      "description": "Continue from saved session",
      "file": "commands/resume.md",
      "category": "session"
    },
    {
      "name": "fix-next",
      "description": "Automatically fix the highest-priority issue",
      "file": "commands/fix-next.md",
      "category": "issues"
    },
    {
      "name": "fix-batch",
      "description": "Fix multiple issues in sequence without stopping",
      "file": "commands/fix-batch.md",
      "arguments": "[count]",
      "category": "issues"
    },
    {
      "name": "audit",
      "description": "Run comprehensive site audit (seo/a11y/perf/full)",
      "file": "commands/audit.md",
      "arguments": "[type]",
      "category": "issues"
    },
    {
      "name": "seo-wins",
      "description": "Find SEO quick wins from Search Console data",
      "file": "commands/seo-wins.md",
      "category": "seo",
      "requires": ["gsc"]
    },
    {
      "name": "content-roi",
      "description": "Analyze content performance and ROI",
      "file": "commands/content-roi.md",
      "category": "seo",
      "requires": ["ga", "gsc"]
    },
    {
      "name": "impact",
      "description": "Measure before/after effect of changes",
      "file": "commands/impact.md",
      "arguments": "[issue-number or page-path]",
      "category": "seo",
      "requires": ["ga", "gsc"]
    },
    {
      "name": "feature",
      "description": "Plan and build a new feature (GSD-style workflow)",
      "file": "commands/feature.md",
      "arguments": "\"[description]\"",
      "category": "development"
    },
    {
      "name": "deploy-check",
      "description": "Pre-deployment verification checklist",
      "file": "commands/deploy-check.md",
      "category": "development"
    },
    {
      "name": "astro-check",
      "description": "Query Astro project info via MCP (routes, config, integrations)",
      "file": "commands/astro-check.md",
      "category": "development",
      "requires": ["astro-mcp"]
    },
    {
      "name": "help",
      "description": "Show all available commands and usage",
      "file": "commands/help.md",
      "category": "help"
    }
  ],

  "commandCategories": {
    "session": {
      "name": "Session Management",
      "description": "Start, pause, and resume work sessions"
    },
    "issues": {
      "name": "Issue Resolution", 
      "description": "Find and fix issues"
    },
    "seo": {
      "name": "SEO & Analytics",
      "description": "SEO analysis and optimization"
    },
    "development": {
      "name": "Development",
      "description": "Build features and deploy"
    },
    "help": {
      "name": "Help",
      "description": "Documentation and assistance"
    }
  },

  "config": {
    "requiredEnv": [],
    "optionalEnv": [
      {
        "name": "GA_PROPERTY_ID",
        "description": "Google Analytics 4 Property ID",
        "example": "123456789"
      },
      {
        "name": "GSC_SITE_URL",
        "description": "Google Search Console site URL",
        "example": "https://example.com/"
      },
      {
        "name": "GOOGLE_APPLICATION_CREDENTIALS",
        "description": "Path to GSC service account JSON",
        "example": "./credentials/gsc-service-account.json"
      },
      {
        "name": "GITHUB_TOKEN",
        "description": "GitHub personal access token",
        "example": "ghp_xxxxxxxxxxxx"
      },
      {
        "name": "GITHUB_REPO",
        "description": "GitHub repository",
        "example": "username/repo-name"
      },
      {
        "name": "BRAVE_API_KEY",
        "description": "Brave Search API key for competitor research",
        "example": "BSA_xxxxxxxxxxxx"
      }
    ],
    "defaults": {
      "framework": "astro",
      "sessionPersistence": true,
      "atomicCommits": true,
      "qualityGates": {
        "typescript": true,
        "build": true
      }
    }
  },

  "mcp": {
    "servers": {
      "astro-docs": {
        "description": "Official Astro documentation - real-time access to latest Astro docs",
        "url": "https://mcp.docs.astro.build/mcp",
        "type": "http",
        "optional": false,
        "recommended": true,
        "requiredFor": ["fix-next", "feature", "audit"],
        "capabilities": ["search_astro_docs"],
        "install": {
          "claude-desktop": {
            "command": "npx",
            "args": ["-y", "mcp-remote", "https://mcp.docs.astro.build/mcp"]
          },
          "vscode": {
            "type": "http",
            "url": "https://mcp.docs.astro.build/mcp"
          }
        }
      },
      "astro-mcp": {
        "description": "Astro project integration - runtime info, routes, config, integrations",
        "package": "astro-mcp",
        "type": "integration",
        "optional": true,
        "recommended": true,
        "requiredFor": ["astro-check", "status", "deploy-check"],
        "capabilities": ["get-astro-config", "list-astro-routes", "get-astro-server-address", "search-astro-docs", "get-integration-docs"],
        "install": {
          "astro": "npx astro add astro-mcp"
        }
      },
      "gsc": {
        "description": "Google Search Console API access",
        "package": "mcp-server-gsc",
        "optional": true,
        "requiredFor": ["seo-wins", "impact", "content-roi"]
      },
      "github": {
        "description": "GitHub API for issue management",
        "package": "@anthropic/mcp-github", 
        "optional": true,
        "requiredFor": ["fix-next with GitHub issues"]
      },
      "sequential-thinking": {
        "description": "Complex problem solving",
        "package": "@modelcontextprotocol/server-sequential-thinking",
        "optional": true
      }
    }
  },

  "files": {
    "created": [
      ".claude/commands/*.md",
      ".planning/",
      "CLAUDE.md",
      ".env.example"
    ],
    "optional": [
      "AI-INFO.md",
      "AUDIT_TRACKER.md",
      ".env"
    ]
  }
}
