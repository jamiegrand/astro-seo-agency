{
  "name": "astro-seo-agency",
  "version": "3.1.0",
  "description": "Complete Astro.js project management with SEO workflows, analytics integration, project indexing, and structured development for Claude Code",
  "author": "Jamie Grand",
  "license": "MIT",
  "homepage": "https://github.com/jamiegrand/astro-seo-agency",
  "repository": {
    "type": "git",
    "url": "https://github.com/jamiegrand/astro-seo-agency.git"
  },
  
  "keywords": [
    "astro",
    "seo",
    "analytics",
    "google-analytics",
    "search-console",
    "content-management",
    "workflow",
    "claude-code",
    "mcp"
  ],

  "engines": {
    "astro": ">=4.0.0",
    "node": ">=18.0.0"
  },

  "install": {
    "script": "install.sh",
    "postInstall": "Run /setup in Claude Code to complete configuration"
  },

  "prompts": {
    "setup": {
      "description": "Interactive setup wizard for new or existing projects",
      "file": "commands/setup.md",
      "triggers": ["/setup", "setup project", "configure plugin"]
    },
    "setup-existing": {
      "description": "Analyze and integrate with existing Astro project",
      "file": "commands/setup-existing.md",
      "triggers": ["/setup existing", "/brownfield", "analyze project", "existing project"]
    },
    "setup-verify": {
      "description": "Verify plugin installation is complete and working",
      "file": "commands/setup-verify.md",
      "triggers": ["/setup verify", "/verify", "check installation", "verify setup"]
    }
  },

  "agents": {
    "seo-analyst": {
      "description": "SEO specialist with GA/GSC data access for ranking analysis",
      "file": "agents/seo-analyst.md",
      "capabilities": ["analytics-query", "seo-audit", "impact-measurement"]
    },
    "astro-maintainer": {
      "description": "Astro.js code quality and maintenance specialist",
      "file": "agents/astro-maintainer.md",
      "capabilities": ["code-review", "bug-fix", "refactoring", "astro-mcp"]
    },
    "content-strategist": {
      "description": "Content planning based on performance data",
      "file": "agents/content-strategist.md",
      "capabilities": ["content-audit", "gap-analysis", "calendar-planning", "eeat-assessment", "ai-overview-optimization"]
    }
  },

  "commands": [
    {
      "name": "seo",
      "description": "SEO tools - wins, gaps, ROI, refresh, history, impact, keywords",
      "file": "commands/seo.md",
      "arguments": "[wins|gaps|roi|refresh|history|impact|keywords] [args]",
      "category": "seo",
      "type": "router"
    },
    {
      "name": "audit",
      "description": "Run audits - site-wide or content-specific",
      "file": "commands/audit.md",
      "arguments": "[seo|a11y|perf|content|quick|batch|eeat] [page] [keyword]",
      "category": "quality",
      "type": "router"
    },
    {
      "name": "fix",
      "description": "Fix issues - single, batch, or specific",
      "file": "commands/fix.md",
      "arguments": "[count|#issue]",
      "category": "issues",
      "type": "router"
    },
    {
      "name": "setup",
      "description": "Setup wizard and configuration tools",
      "file": "commands/setup.md",
      "arguments": "[existing|verify|commands|index|help]",
      "category": "meta",
      "type": "router"
    },
    {
      "name": "feature",
      "description": "Build features or run deploy checks",
      "file": "commands/feature.md",
      "arguments": "\"description\" | deploy",
      "category": "development",
      "type": "router"
    },
    {
      "name": "start",
      "description": "Begin session with data-driven priorities",
      "file": "commands/start.md",
      "category": "session"
    },
    {
      "name": "status",
      "description": "Show current project and session status",
      "file": "commands/status.md",
      "category": "session"
    },
    {
      "name": "pause",
      "description": "Save session state for later",
      "file": "commands/pause.md",
      "category": "session"
    },
    {
      "name": "resume",
      "description": "Continue from saved session",
      "file": "commands/resume.md",
      "category": "session"
    },
    {
      "name": "astro-check",
      "description": "Query Astro project info via MCP",
      "file": "commands/astro-check.md",
      "arguments": "[mcp|config|routes|docs|health]",
      "category": "development"
    },
    {
      "name": "help",
      "description": "Show all available commands",
      "file": "commands/help.md",
      "category": "meta"
    },
    {
      "name": "seo-wins",
      "description": "Find SEO quick wins from Search Console",
      "file": "commands/seo-wins.md",
      "category": "seo",
      "type": "implementation",
      "parent": "seo"
    },
    {
      "name": "seo-gaps",
      "description": "Find content opportunities from GSC data",
      "file": "commands/seo-gaps.md",
      "category": "seo",
      "type": "implementation",
      "parent": "seo"
    },
    {
      "name": "seo-roi",
      "description": "Analyze content performance and ROI",
      "file": "commands/seo-roi.md",
      "category": "seo",
      "type": "implementation",
      "parent": "seo"
    },
    {
      "name": "seo-refresh",
      "description": "Find declining pages needing refresh",
      "file": "commands/seo-refresh.md",
      "category": "seo",
      "type": "implementation",
      "parent": "seo"
    },
    {
      "name": "seo-history",
      "description": "View audit score history for a page",
      "file": "commands/seo-history.md",
      "arguments": "[page-path]",
      "category": "seo",
      "type": "implementation",
      "parent": "seo"
    },
    {
      "name": "seo-impact",
      "description": "Measure before/after effect of changes",
      "file": "commands/seo-impact.md",
      "arguments": "[issue-number|page-path]",
      "category": "seo",
      "type": "implementation",
      "parent": "seo"
    },
    {
      "name": "seo-keywords",
      "description": "Manage cached keyword research data",
      "file": "commands/seo-keywords.md",
      "arguments": "[list|search|refresh|clear] [keyword]",
      "category": "seo",
      "type": "implementation",
      "parent": "seo"
    },
    {
      "name": "seo-links",
      "description": "Analyze internal linking structure",
      "file": "commands/seo-links.md",
      "arguments": "[orphans|hubs|opportunities|page-url]",
      "category": "seo",
      "type": "implementation",
      "parent": "seo"
    },
    {
      "name": "index-links",
      "description": "Index internal links and keywords from content",
      "file": "commands/index-links.md",
      "arguments": "[--full|--collection name|--dry-run]",
      "category": "data",
      "type": "implementation",
      "parent": "index"
    },
    {
      "name": "import-linkdata",
      "description": "Import link analysis data from CSV",
      "file": "commands/import-linkdata.md",
      "arguments": "[csv-path] [--source tool-name]",
      "category": "data",
      "type": "standalone"
    },
    {
      "name": "audit-content",
      "description": "Full SEO content audit with scoring",
      "file": "commands/audit-content.md",
      "arguments": "[page-path] [keyword]",
      "category": "quality",
      "type": "implementation",
      "parent": "audit"
    },
    {
      "name": "audit-quick",
      "description": "10-point rapid content check",
      "file": "commands/audit-quick.md",
      "arguments": "[page-path] [keyword]",
      "category": "quality",
      "type": "implementation",
      "parent": "audit"
    },
    {
      "name": "audit-batch",
      "description": "Batch audit multiple pages",
      "file": "commands/audit-batch.md",
      "arguments": "[collection|pages] [--limit N]",
      "category": "quality",
      "type": "implementation",
      "parent": "audit"
    },
    {
      "name": "audit-eeat",
      "description": "Deep E-E-A-T audit",
      "file": "commands/audit-eeat.md",
      "arguments": "[page-path]",
      "category": "quality",
      "type": "implementation",
      "parent": "audit"
    },
    {
      "name": "fix-next",
      "description": "Fix highest-priority issue",
      "file": "commands/fix-next.md",
      "category": "issues",
      "type": "implementation",
      "parent": "fix"
    },
    {
      "name": "fix-batch",
      "description": "Fix multiple issues in sequence",
      "file": "commands/fix-batch.md",
      "arguments": "[count]",
      "category": "issues",
      "type": "implementation",
      "parent": "fix"
    },
    {
      "name": "setup-existing",
      "description": "Analyze existing Astro project",
      "file": "commands/setup-existing.md",
      "category": "meta",
      "type": "implementation",
      "parent": "setup"
    },
    {
      "name": "setup-verify",
      "description": "Verify plugin installation",
      "file": "commands/setup-verify.md",
      "category": "meta",
      "type": "implementation",
      "parent": "setup"
    },
    {
      "name": "setup-commands",
      "description": "Generate custom commands",
      "file": "commands/setup-commands.md",
      "category": "meta",
      "type": "implementation",
      "parent": "setup"
    },
    {
      "name": "setup-index",
      "description": "Manage project indexing",
      "file": "commands/setup-index.md",
      "arguments": "[status|run|resume|reset|refresh]",
      "category": "meta",
      "type": "implementation",
      "parent": "setup"
    },
    {
      "name": "feature-deploy",
      "description": "Pre-deployment verification",
      "file": "commands/feature-deploy.md",
      "category": "development",
      "type": "implementation",
      "parent": "feature"
    },
    {
      "name": "content-gap",
      "description": "Alias for /seo gaps",
      "file": "commands/content-gap.md",
      "category": "seo",
      "type": "alias",
      "aliasFor": "seo-gaps"
    },
    {
      "name": "content-roi",
      "description": "Alias for /seo roi",
      "file": "commands/content-roi.md",
      "category": "seo",
      "type": "alias",
      "aliasFor": "seo-roi"
    },
    {
      "name": "content-audit",
      "description": "Alias for /audit content",
      "file": "commands/content-audit.md",
      "category": "quality",
      "type": "alias",
      "aliasFor": "audit-content"
    },
    {
      "name": "content-audit-quick",
      "description": "Alias for /audit quick",
      "file": "commands/content-audit-quick.md",
      "category": "quality",
      "type": "alias",
      "aliasFor": "audit-quick"
    },
    {
      "name": "content-audit-batch",
      "description": "Alias for /audit batch",
      "file": "commands/content-audit-batch.md",
      "category": "quality",
      "type": "alias",
      "aliasFor": "audit-batch"
    },
    {
      "name": "content-eeat",
      "description": "Alias for /audit eeat",
      "file": "commands/content-eeat.md",
      "category": "quality",
      "type": "alias",
      "aliasFor": "audit-eeat"
    },
    {
      "name": "content-refresh",
      "description": "Alias for /seo refresh",
      "file": "commands/content-refresh.md",
      "category": "seo",
      "type": "alias",
      "aliasFor": "seo-refresh"
    },
    {
      "name": "content-history",
      "description": "Alias for /seo history",
      "file": "commands/content-history.md",
      "category": "seo",
      "type": "alias",
      "aliasFor": "seo-history"
    },
    {
      "name": "keyword-cache",
      "description": "Alias for /seo keywords",
      "file": "commands/keyword-cache.md",
      "category": "seo",
      "type": "alias",
      "aliasFor": "seo-keywords"
    },
    {
      "name": "brownfield",
      "description": "Alias for /setup existing",
      "file": "commands/brownfield.md",
      "category": "meta",
      "type": "alias",
      "aliasFor": "setup-existing"
    },
    {
      "name": "verify",
      "description": "Alias for /setup verify",
      "file": "commands/verify.md",
      "category": "meta",
      "type": "alias",
      "aliasFor": "setup-verify"
    },
    {
      "name": "generate-commands",
      "description": "Alias for /setup commands",
      "file": "commands/generate-commands.md",
      "category": "meta",
      "type": "alias",
      "aliasFor": "setup-commands"
    },
    {
      "name": "index",
      "description": "Alias for /setup index",
      "file": "commands/index.md",
      "category": "meta",
      "type": "alias",
      "aliasFor": "setup-index"
    },
    {
      "name": "deploy-check",
      "description": "Alias for /feature deploy",
      "file": "commands/deploy-check.md",
      "category": "development",
      "type": "alias",
      "aliasFor": "feature-deploy"
    },
    {
      "name": "impact",
      "description": "Alias for /seo impact",
      "file": "commands/impact.md",
      "category": "seo",
      "type": "alias",
      "aliasFor": "seo-impact"
    }
  ],

  "commandCategories": {
    "session": {
      "name": "Session Management",
      "description": "Start, pause, and resume work sessions"
    },
    "issues": {
      "name": "Issue Resolution",
      "description": "Find and fix issues"
    },
    "seo": {
      "name": "SEO & Analytics",
      "description": "SEO analysis and optimization"
    },
    "quality": {
      "name": "Quality & Auditing",
      "description": "Site and content audits"
    },
    "development": {
      "name": "Development",
      "description": "Build features and deploy"
    },
    "data": {
      "name": "Data & Indexing",
      "description": "Import data and build indexes"
    },
    "meta": {
      "name": "Setup & Help",
      "description": "Configuration and documentation"
    }
  },

  "config": {
    "requiredEnv": [],
    "optionalEnv": [
      {
        "name": "GA_PROPERTY_ID",
        "description": "Google Analytics 4 Property ID",
        "example": "123456789"
      },
      {
        "name": "GSC_SITE_URL",
        "description": "Google Search Console site URL",
        "example": "https://example.com/"
      },
      {
        "name": "GOOGLE_APPLICATION_CREDENTIALS",
        "description": "Path to GSC service account JSON",
        "example": "./credentials/gsc-service-account.json"
      },
      {
        "name": "GITHUB_TOKEN",
        "description": "GitHub personal access token",
        "example": "ghp_xxxxxxxxxxxx"
      },
      {
        "name": "GITHUB_REPO",
        "description": "GitHub repository",
        "example": "username/repo-name"
      },
      {
        "name": "BRAVE_API_KEY",
        "description": "Brave Search API key for competitor research",
        "example": "BSA_xxxxxxxxxxxx"
      },
      {
        "name": "SCRAPERAPI_KEY",
        "description": "ScraperAPI key for competitor content scraping",
        "example": "your_scraperapi_key"
      },
      {
        "name": "DATAFORSEO_USERNAME",
        "description": "DataForSEO API username",
        "example": "your_username"
      },
      {
        "name": "DATAFORSEO_PASSWORD",
        "description": "DataForSEO API password",
        "example": "your_password"
      }
    ],
    "defaults": {
      "framework": "astro",
      "sessionPersistence": true,
      "atomicCommits": true,
      "qualityGates": {
        "typescript": true,
        "build": true
      }
    }
  },

  "mcp": {
    "servers": {
      "astro-docs": {
        "description": "Official Astro documentation - real-time access to latest Astro docs",
        "url": "https://mcp.docs.astro.build/mcp",
        "type": "http",
        "optional": false,
        "recommended": true,
        "requiredFor": ["fix-next", "feature", "audit"],
        "capabilities": ["search_astro_docs"],
        "install": {
          "claude-desktop": {
            "command": "npx",
            "args": ["-y", "mcp-remote", "https://mcp.docs.astro.build/mcp"]
          },
          "vscode": {
            "type": "http",
            "url": "https://mcp.docs.astro.build/mcp"
          }
        }
      },
      "astro-mcp": {
        "description": "Astro project integration - runtime info, routes, config, integrations",
        "package": "astro-mcp",
        "type": "integration",
        "optional": true,
        "recommended": true,
        "requiredFor": ["astro-check", "status", "feature-deploy"],
        "capabilities": ["get-astro-config", "list-astro-routes", "get-astro-server-address", "get-integration-docs"],
        "install": {
          "astro": "npx astro add astro-mcp"
        }
      },
      "gsc": {
        "description": "Google Search Console API access",
        "package": "gsc-mcp-server",
        "optional": true,
        "requiredFor": ["seo-wins", "seo-impact", "seo-roi", "audit-content", "seo-refresh", "audit-batch"]
      },
      "scraperapi": {
        "description": "Web scraping for competitor content analysis",
        "command": "npx",
        "args": ["@scraperapi/mcp"],
        "env": ["SCRAPERAPI_KEY"],
        "optional": true,
        "requiredFor": ["audit-content competitor analysis"]
      },
      "dataforseo": {
        "description": "Keyword research, search volume, and SERP data",
        "command": "npx",
        "args": ["-y", "dataforseo-mcp-server"],
        "env": ["DATAFORSEO_USERNAME", "DATAFORSEO_PASSWORD"],
        "optional": true,
        "requiredFor": ["audit-content keyword optimization"]
      },
      "github": {
        "description": "GitHub API for issue management",
        "package": "@anthropic/mcp-github", 
        "optional": true,
        "requiredFor": ["fix-next with GitHub issues"]
      },
      "sequential-thinking": {
        "description": "Complex problem solving for multi-step feature planning",
        "package": "@modelcontextprotocol/server-sequential-thinking",
        "optional": true,
        "requiredFor": ["feature"]
      }
    }
  },

  "files": {
    "created": [
      ".claude/commands/*.md",
      ".planning/",
      ".planning/seo-audit.db",
      "CLAUDE.md",
      ".env.example"
    ],
    "generated": [
      "AI-INFO.md"
    ],
    "optional": [
      "AUDIT_TRACKER.md",
      ".env"
    ]
  }
}
